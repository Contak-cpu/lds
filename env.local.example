# Variables de entorno para "Los de Siempre Sneakers" CRM (Versión Local)
# Este archivo contiene las variables necesarias para ejecutar el proyecto sin base de datos externa

# Configuración de la aplicación
NEXT_PUBLIC_APP_NAME="Los de Siempre Sneakers CRM"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_ENVIRONMENT="local"

# Configuración de datos mockeados
NEXT_PUBLIC_USE_MOCK_DATA="true"
NEXT_PUBLIC_MOCK_DATA_PERSISTENCE="localStorage"

# Configuración de la API (opcional para futuras integraciones)
# NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Configuración de autenticación (opcional para futuras integraciones)
# NEXT_PUBLIC_AUTH_ENABLED=false
# NEXT_PUBLIC_AUTH_PROVIDER="none"

# Configuración de notificaciones
NEXT_PUBLIC_NOTIFICATIONS_ENABLED="true"
NEXT_PUBLIC_TOAST_DURATION="5000"

# Configuración de tema
NEXT_PUBLIC_DEFAULT_THEME="system"
NEXT_PUBLIC_THEME_PERSISTENCE="localStorage"

# Configuración de desarrollo
NODE_ENV="development"
NEXT_PUBLIC_DEBUG_MODE="true"
